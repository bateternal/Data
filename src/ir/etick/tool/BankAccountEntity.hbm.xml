<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="ir.etick.tool.BankAccountEntity" table="bank_account" schema="etick">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="numberAccount">
            <column name="Number_Account" sql-type="varchar(8)" length="8" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>